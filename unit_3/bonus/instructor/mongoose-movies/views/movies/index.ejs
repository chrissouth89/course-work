<!DOCTYPE html>
<html>
  <head>
    <title>Movies Index</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Movie List</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Release Year</th>
          <th>Rating</th>
          <th>Cast</th>
          <th>Now Showing</th>
        </tr>
      </thead>
      <tbody>
        <% movies.forEach( (m) => { %>
          <tr>
            <td><%= m.title %></td>
            <td><%= m.releaseYear %></td>
            <td><%= m.mpaaRating %></td>
            <td><%= m.cast.join(', ') %></td>
            <td><%= m.nowShowing ? 'Yes' : 'Nope' %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    
  </body>
</html>
